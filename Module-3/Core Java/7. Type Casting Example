public class TypeCastingExample {
    public static void main(String[] args) {
        // Declare a double variable with a decimal value
        double myDouble = 9.78;

        // Cast the double to an int (explicit casting)
        int myInt = (int) myDouble;

        // Display the result of double to int casting
        System.out.println("Original double value: " + myDouble);
        System.out.println("After casting to int: " + myInt);

        // Declare an int variable
        int number = 42;

        // Cast the int to a double (implicit casting)
        double convertedDouble = number;

        // Display the result of int to double casting
        System.out.println("Original int value: " + number);
        System.out.println("After casting to double: " + convertedDouble);
    }
}
