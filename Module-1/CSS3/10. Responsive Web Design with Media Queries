/* ================================
   Responsive Styles for Tablets & Phones
   ================================ */

@media screen and (max-width: 768px) {
  body {
    font-size: 16px;
  }

  .nav-menu {
    flex-direction: column;       /* stack nav links vertically */
    align-items: center;
  }

  .nav-menu a {
    padding: 10px;
    width: 100%;
    text-align: center;
    border-bottom: 1px solid #ccc;
  }

  .hero-image {
    width: 95vw;                  /* shrink image for smaller screens */
  }

  .content {
    font-size: 1rem;
    padding: 10px;
  }
}
