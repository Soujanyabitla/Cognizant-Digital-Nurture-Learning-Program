/* ================================
   Selectors Playground Section
   ================================ */

/* Universal selector: Reset margin and padding on all elements */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

/* Element selector: Style all <h2> elements */
h2 {
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  font-size: 2rem;
  color: #333;
  margin-bottom: 0.5em;
}

/* ID selector: Style the banner with ID mainHeader */
#mainHeader {
  background-color: #004080;
  color: white;
  padding: 20px;
  text-align: center;
  font-size: 1.8rem;
  font-weight: bold;
}

/* Class selector: Style all event containers */
.eventCard {
  background-color: #f5f7fa;
  border: 1px solid #ddd;
  border-radius: 8px;
  padding: 15px;
  margin-bottom: 15px;
  box-shadow: 0 2px 5px rgba(0,0,0,0.1);
}

/* Grouping selector: Style <h3> and <p> elements together */
h3, p {
  font-family: 'Arial', sans-serif;
  color: #555;
  line-height: 1.4;
}
