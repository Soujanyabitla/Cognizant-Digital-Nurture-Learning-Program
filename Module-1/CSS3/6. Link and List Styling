/* ================================
   Link and List Styling Section
   ================================ */

/* Link styles for different states */
a:link {
  color: #0066cc;           /* default link color */
  text-decoration: none;
}

a:visited {
  color: #663399;           /* visited link color */
}

a:hover {
  color: #004080;           /* hover color */
  text-decoration: underline;
  cursor: pointer;
}

a:active {
  color: #00264d;           /* active/clicked color */
}

/* Unordered list styling */
ul {
  list-style-type: disc;    /* default bullet */
  list-style-position: inside;
  padding-left: 20px;       /* indent */
  margin-bottom: 1em;
}

/* Remove bullets from navigation menus */
.nav-menu {
  list-style-type: none;    /* no bullets */
  padding-left: 0;
  margin: 0;
  display: flex;            /* horizontal menu */
  gap: 20px;                /* spacing between nav items */
}

/* List item spacing */
li {
  padding: 5px 0;
}

/* Optional: style nav menu links */
.nav-menu li a {
  color: #004080;
  font-weight: 600;
  text-decoration: none;
}

.nav-menu li a:hover {
  text-decoration: underline;
}
